{% extends 'base.html.twig' %}

{% block title %}Survey index{% endblock %}

{% block body %}
    <h1>Survey index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for survey in surveys %}
            <tr>
                <td>{{ survey.id }}</td>
                <td>{{ survey.name }}</td>
                <td>
                    <a href="{{ path('app_survey_show', {'id': survey.id}) }}">show</a>
                    <a href="{{ path('app_survey_edit', {'id': survey.id}) }}">edit</a>
                    <a href="{{ path('app_survey_response_new', {'id': survey.id}) }}">respond</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no surveys found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_survey_new') }}">Create new Survey</a>

    <div style="margin-top: 10em;">
        <span><a href="?XDEBUG_SESSION_START=phpstorm">XDebug session start</a></span>
    </div>
    <div>
        <span><a href="?XDEBUG_SESSION_STOP">XDebug session stop</a></span>
    </div>

{% endblock %}
